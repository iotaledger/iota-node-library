{
    "name": "@iota/iota.js",
    "description": "IOTA JavaScript Library",
    "version": "1.5.1",
    "keywords": [
        "iota",
        "client"
    ],
    "authors": [
        "Martyn Janes <martyn.janes@iota.org>"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaledger/iota.js.git"
    },
    "license": "Apache-2.0",
    "dependencies": {
        "base64-js": "^1.5.1",
        "big-integer": "^1.6.48",
        "mqtt": "^4.2.4",
        "node-fetch": "^2.6.1"
    },
    "scripts": {
        "build-clean": "rimraf ./es/*",
        "build-lint": "eslint src --ext .tsx,.ts",
        "build-compile": "tsc",
        "build-watch": "tsc --watch",
        "build": "run-s build-clean build-lint build-compile",
        "test-lint": "eslint test --ext .tsx,.ts",
        "test-run": "jest",
        "test": "run-s test-lint test-run",
        "package-umd": "rollup --config rollup.config.js",
        "package-umd-min": "rollup --config rollup.config.js --environment MINIFY:true",
        "package-umd-browser": "rollup --config rollup.config.js --environment BROWSER:true",
        "package-umd-browser-min": "rollup --config rollup.config.js --environment BROWSER:true --environment MINIFY:true",
        "package": "run-s package-umd package-umd-min package-umd-browser package-umd-browser-min",
        "dist-clean": "rimraf ./dist/* ./typings/*",
        "typings": "tsc --emitDeclarationOnly --declaration true --declarationDir typings",
        "docs-clean": "rimraf ./docs/*",
        "docs-build": "typedoc --disableSources --excludePrivate --excludeNotDocumented --theme markdown --readme none --hideGenerator --exclude ./**/src/index.ts,./**/src/index.*.ts,./**/src/polyfill.*.ts --out ./docs ./src",
        "docs": "npm-run-all docs-clean docs-build",
        "dist": "run-s dist-clean build test package typings docs"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "engines": {
        "node": ">=12.0.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^18.1.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@rollup/plugin-replace": "^2.4.2",
        "@types/jest": "^26.0.23",
        "@types/node-fetch": "^2.5.10",
        "@typescript-eslint/eslint-plugin": "^4.22.1",
        "@typescript-eslint/parser": "^4.22.1",
        "cross-env": "^7.0.2",
        "eslint": "^7.25.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^33.1.0",
        "eslint-plugin-unicorn": "^31.0.0",
        "jest": "^26.6.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.47.0",
        "rollup-plugin-terser": "^7.0.2",
        "ts-jest": "^26.5.6",
        "ts-node": "^9.0.0",
        "typedoc": "^0.20.36",
        "typedoc-plugin-markdown": "^3.8.1",
        "typescript": "^4.2.4"
    },
    "main": "dist/iota.js",
    "browser": "dist/iota.browser.js",
    "module": "es/index.js",
    "typings": "typings/index.d.ts",
    "files": [
        "dist",
        "lib",
        "es",
        "src",
        "typings"
    ]
}
